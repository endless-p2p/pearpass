{
  "compilerOptions": {
    "composite": true,
    "moduleDetection": "force",
    "target": "ES2020",
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "jsx": "react",
    "esModuleInterop": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["src/**/*.test.ts"],
  "include": ["src/**/*", "test"]
}
